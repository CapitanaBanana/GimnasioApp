<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GimnasioFlex" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gris</item>
    </style>

    <style name="TemaDialogo" parent="Base.Theme.GimnasioFlex">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparente</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/casi_blanco</item> <!-- Cambia este valor al color deseado -->
        <item name="backgroundTint">@color/colorPrimaryDark</item> <!-- Cambia este valor al color deseado para el fondo -->
        <item name="android:background">@drawable/rounded_button</item>
    </style>
    <style name="ButtonStyleTipoCuota" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Icono" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/casi_blanco</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>