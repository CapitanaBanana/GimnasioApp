<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="#FF3030" >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="#80D1D0D0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/agregarUsuario"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="20dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                app:icon="@drawable/plus"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="40dp"
                app:strokeColor="#000000"
                android:onClick="agregarAlumno" />

            <Button
                android:id="@+id/verUsuarios"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="20dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                android:onClick="listarAlumnos"
                app:icon="@drawable/list"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="40dp"
                app:strokeColor="#000000" />
            <Button
                android:id="@+id/pagoCuotas"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="20dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                app:icon="@drawable/dollar"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconSize="40dp"
                app:strokeColor="#000000" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            android:textColor="#F1F1F1"
            android:textSize="48sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        android:paddingTop="28dp">

        <EditText
            android:id="@+id/txtDNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_corners"
            android:ems="10"
            android:hint="DNI"
            android:maxLength="8"
            android:inputType="number"
            android:padding="10dp" />

        <Button
            android:onClick="verificarExistencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:text="Aceptar"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</RelativeLayout>
