<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/filtro_rojo_fondo" >
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@color/gris_traslucido"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/agregarUsuario"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="20dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                app:icon="@drawable/plus"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="40dp"
                app:strokeColor="#000000"
                android:onClick="agregarAlumno" />

            <Button
                android:id="@+id/verUsuarios"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="20dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                android:onClick="listarAlumnos"
                app:icon="@drawable/list"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="40dp"
                app:strokeColor="#000000" />
            <Button
                android:id="@+id/pagoCuotas"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="20dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#00FBFBFB"
                app:icon="@drawable/dollar"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconSize="40dp"
                android:onClick="manejarCuotas"
                app:strokeColor="#000000" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar cuota"
            android:textColor="#F1F1F1"
            android:textSize="32sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:orientation="vertical"
        android:paddingTop="28dp">

        <SearchView
            android:id="@+id/busqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/casi_negro"
            android:iconifiedByDefault="false"
            android:queryHint="Buscar" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/DosVeces"
                    style="@style/ButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:text="Dos veces"
                    android:textAlignment="center" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/TresVeces"
                    style="@style/ButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:text="Tres veces"
                    android:textAlignment="center" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/Libre"
                    style="@style/ButtonStyle"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:text="Libre"
                    android:textAlignment="center" />

            </RadioGroup>

        </LinearLayout>

        <Button
            style="@style/Button.MyApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="true"
            android:onClick="registrarCuota"
            android:text="Agregar cuota" />


    </LinearLayout>

</RelativeLayout>
